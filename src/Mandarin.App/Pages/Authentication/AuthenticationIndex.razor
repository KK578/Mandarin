@page "/authentication/{action}"

<Card>
  <CardHeader>
    <CardTitle>Authentication</CardTitle>
  </CardHeader>
  <CardBody>
    <RemoteAuthenticatorView Action="@(Action)" />
  </CardBody>
</Card>

@code{

  /// <summary>
  /// Gets or sets the authentication action to be performed.
  /// </summary>
  [Parameter]
  public string Action { get; set; }

}
