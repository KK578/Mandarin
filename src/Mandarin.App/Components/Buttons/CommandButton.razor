<Button Clicked="@Command.ExecuteAsync" Disabled="@(!Command.CanExecute)" @attributes="@AdditionalAttributes">@ChildContent</Button>

@code {

  /// <summary>
  /// Gets or sets the command to be executed on the button being clicked.
  /// </summary>
  [Parameter]
  public ICommand Command { get; set; }

  /// <summary>
  /// Gets or sets the additional HTML attributes to apply to the <see cref="Button"/>.
  /// </summary>
  [Parameter(CaptureUnmatchedValues = true)]
  public Dictionary<string, object> AdditionalAttributes { get; set; }

  /// <summary>
  /// Gets or sets the content to display within the button.
  /// </summary>
  [Parameter]
  public RenderFragment ChildContent { get; set; }

}
