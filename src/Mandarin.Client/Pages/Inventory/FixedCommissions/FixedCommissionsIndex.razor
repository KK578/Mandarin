@page "/inventory/fixed-commissions"
@using System.Reactive.Linq
@inherits ReactiveInjectableComponentBase<IFixedCommissionsIndexViewModel>

<Card>
  <CardHeader>
    <CardTitle>Fixed Commission Amounts</CardTitle>
    <CardActions Float="Float.Right">
      <ReactiveButton ReactiveCommand="@ViewModel!.EditSelected" Color="Color.Secondary">Edit</ReactiveButton>
      <ReactiveButton ReactiveCommand="@ViewModel!.CreateNew" Color="Color.Primary">New</ReactiveButton>
    </CardActions>
  </CardHeader>
  <CardBody>
    @if (ViewModel!.IsLoading)
    {
      <MandarinProgressBar>Loading Data...</MandarinProgressBar>
    }
    else
    {
      <DataGrid TItem="IFixedCommissionsGridRowViewModel" Data="@ViewModel!.Rows" Filterable="true" Striped="true"
                ShowPager="true" PagerPosition="DataGridPagerPosition.Top" PageSize="15"
                RowSelectable="@(_ => true)" @bind-SelectedRow="@ViewModel!.SelectedRow">
        <DataGridColumn TItem="IFixedCommissionsGridRowViewModel" Caption="Product Code" Field="@(nameof(IFixedCommissionsGridRowViewModel.ProductCode))" TextAlignment="TextAlignment.Left" />
        <DataGridColumn TItem="IFixedCommissionsGridRowViewModel" Caption="Product Name" Field="@(nameof(IFixedCommissionsGridRowViewModel.ProductName))" TextAlignment="TextAlignment.Left" />
        <DataGridNumericColumn TItem="IFixedCommissionsGridRowViewModel" Caption="Retail Price" Field="@(nameof(IFixedCommissionsGridRowViewModel.RetailPrice))" TextAlignment="TextAlignment.Right" DisplayFormat="{0:C}" />
        <DataGridNumericColumn TItem="IFixedCommissionsGridRowViewModel" Caption="Frame Price" Field="@(nameof(IFixedCommissionsGridRowViewModel.FramePrice))" TextAlignment="TextAlignment.Right" DisplayFormat="{0:C}" />
        <DataGridNumericColumn TItem="IFixedCommissionsGridRowViewModel" Caption="Artist Price" Field="@(nameof(IFixedCommissionsGridRowViewModel.ArtistPrice))" TextAlignment="TextAlignment.Right" DisplayFormat="{0:C}" />
      </DataGrid>
    }
  </CardBody>
</Card>

@code {

  /// <inheritdoc />
  protected override async Task OnInitializedAsync()
  {
    await base.OnInitializedAsync();
    await ViewModel!.LoadData.Execute();
  }

}
