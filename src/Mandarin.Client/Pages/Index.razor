@page "/"
@inherits ReactiveInjectableComponentBase<IIndexViewModel>

<Jumbotron Background="Background.Dark">
  <Container Class="text-center">
    <FigureImage Source="/static/images/logo.png" Margin="Margin.IsAuto" />
    <JumbotronTitle Class="font-title text-gold" Size="JumbotronTitleSize.Is4">The Little Mandarin</JumbotronTitle>
    <JumbotronSubtitle Class="text-white">Welcome to The Little Mandarin's Administrative tools page (version @(ViewModel.Version))</JumbotronSubtitle>
  </Container>
  <Divider />
  <Paragraph Color="TextColor.White50">
    Use the sidebar to navigate to the different available tools.<br />
    And now, a word from this page's random emoji:<br />
    <Icon Name="ViewModel.Icon" />
  </Paragraph>
</Jumbotron>

