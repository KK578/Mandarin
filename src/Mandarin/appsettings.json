{
  "AllowedHosts": "*",
  "ElasticApm": {
    "ServerUrls": "http://localhost:8200",
    "SecretToken": "",
    "CentralConfig": false
  },
  "Fruity": {
    "Url": "http://localhost:9090"
  },
  "Mandarin": {
    "EnableAttachments": false
  },
  "SendGrid": {
    "ApiKey": null,
    "ServiceEmail": null,
    "RealContactEmail": null
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Elastic.Apm": "Error",
        "Microsoft": "Information",
        "Microsoft.Hosting.Lifetime": "Information"
      }
    },
    "Enrich": [
      "FromLogContext",
      "WithElasticApmCorrelationInfo",
      "WithMachineName",
      "WithThreadId"
    ],
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "{Timestamp:HH:mm:ss.ffff} {Level:u} [{ElasticApmTransactionId}.{ElasticApmTraceId}] {SourceContext}: {Message}{NewLine}{Exception}"
        }
      },
      {
        "Name": "Elasticsearch",
        "Args": {
          "nodeUris": "http://localhost:9200",
          "indexFormat": "bashi-mandarin-{0:yyyy.MM.dd}",
          "templateName": "bashi-mandarin",
          "connectionGlobalHeaders": "",
          "autoRegisterTemplate": true,
          "autoRegisterTemplateVersion": "ESv7",
          "numberOfReplicas": 0,
          "customFormatter": "Elastic.CommonSchema.Serilog.EcsTextFormatter, Elastic.CommonSchema.Serilog"
        }
      }
    ]
  }
}
