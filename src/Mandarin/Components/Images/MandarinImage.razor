@using Mandarin.ViewModels.Components.Images

<img @attributes="@Properties" src="@ViewModel.SourceUrl" alt="@ViewModel.Description" />

@code
{
  /// <summary>
  /// Gets or sets the additional attributes for the image tag.
  /// </summary>
  [Parameter(CaptureUnmatchedValues = true)]
  public Dictionary<string, object> Properties { get; set; }

  /// <summary>
  /// Gets or sets the backing data model for the image.
  /// </summary>
  [Parameter]
  public IMandarinImageViewModel ViewModel { get; set; }
}
