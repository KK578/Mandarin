@using Mandarin.ViewModels.Components.Images

<img class="@Class" src="@ViewModel.SourceUrl" alt="@ViewModel.Description" />

@code
{
  /// <summary>
  /// Gets or sets the class attribute for the image tag.
  /// </summary>
  [Parameter]
  public string Class { get; set; }

  /// <summary>
  /// Gets or sets the backing data model for the image.
  /// </summary>
  [Parameter]
  public IMandarinImageViewModel ViewModel { get; set; }
}
