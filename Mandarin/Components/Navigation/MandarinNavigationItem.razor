<div class="flex-1">
  <NavLink class="block hover:opacity-50 text-center py-1 transition-colors transition-opacity duration-200 ease-in-out"
           ActiveClass="bg-mandarin-gold"
           Match="NavLinkMatch.All"
           href="@Href">@ChildContent</NavLink>
</div>

@code
{
  [Parameter]
  public RenderFragment ChildContent { get; set; }
  
  [Parameter]
  public string Href { get; set; }
}
